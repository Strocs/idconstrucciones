---
import Title from '@/components/Title.astro'
import SITE from '@/data/SITE'

const { sections } = SITE
---

<div class='text-slate-200 h-full grid place-content-center'>
  <Title class='font-black text-center px-2'> {sections.hero.title} </Title>
  <p
    class='text-center leading-none text-lg md:text-2xl mb-4 uppercase py-1 px-2 w-fit mx-auto md:bg-blue-950/80'
  >
    {sections.hero.subTitle}
  </p>
</div>
