---
import SITE from '@/data/SITE'
import Title from './Title.astro'
import { getImage } from 'astro:assets'
import bgImage from '@/assets/obra-main.jpg'

const { title, description } = SITE.sections.about

const optimizedBgImage = await getImage({
  src: bgImage,
  width: 1920,
  height: 1080,
  format: 'webp',
  quality: 80,
})
---

<div
  id='sello'
  style={`background-image: url(${optimizedBgImage.src})`}
  class='cp-mv md:cp-v bg-cover bg-no-repeat bg-bottom bg-fixed after:bg-blue-950/80 after:absolute after:inset-0 relative py-20'
>
  <section
    class='container mx-auto py-10 md:py-20 opacity-0 px-4 md:px-6 lg:px-8 space-y-10 z-10 relative'
  >
    <Title h='h2' class='font-bold text-center'>
      {title}
    </Title>
    {
      description.map((p) => {
        return (
          <p
            class='text-center text-lg md:text-xl max-w-prose mx-auto'
            set:html={p}
          />
        )
      })
    }
  </section>
</div>
