---
import { Image } from 'astro:assets'
import AboutAcordeon from './AboutAccordion.astro'
import constru from '@/assets/constru.jpg'
import Title from '@/components/Title.astro'
---

<section id="servicios" class="py-4 md:py-10 uppercase opacity-0">
  <header class="mb-8 grid gap-4 md:grid-cols-2 md:gap-8 items-end">
    <Title h="h2" class="font-bold">Nuestros Servicios</Title>
    <p class="text-sm opacity-50 md:text-base">
      Lorem ipsum dolor sit amet consectetur adipisicing elit. Aperiam, eveniet.
    </p>
  </header>
  <div class="grid gap-8 md:grid-cols-2">
    <AboutAcordeon open={0} />
    <div class="w-full aspect-square rounded-br-[10rem] overflow-hidden">
      <Image
        class="w-full h-full object-cover"
        src={constru}
        alt="some building"
      />
    </div>
  </div>
</section>
