---
import { Image } from "astro:assets";
interface Props {
  src: ImageMetadata;
  alt: string;
  title: string;
}
const { src, alt, title } = Astro.props;
---

<div class="block relative w-full h-full group">
  <Image class="w-full h-full object-cover" src={src} alt={alt} />
  <div
    class="bg-slate-500 bg-opacity-20 absolute inset-0 flex justify-center items-center flex-col gap-1 backdrop-blur-md translate-y-full group-hover:translate-y-0 transition-transform md:gap-2"
  >
    <h3
      class="text-2xl font-medium text-center md:text-3xl lg:text-3xl text-white px-3"
    >
      {title}
    </h3>
  </div>
</div>
